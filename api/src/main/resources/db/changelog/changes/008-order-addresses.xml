<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.21.xsd">

    <changeSet id="008-create-order-addresses" author="dariomatias">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order_addresses"/>
            </not>
        </preConditions>

        <createTable tableName="order_addresses">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="label" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="complement" type="varchar(255)"/>
            <column name="neighborhood" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="varchar(2)">
                <constraints nullable="false"/>
            </column>
            <column name="zip" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="geometry(Point,4326)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
